---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "The Lions Alliance",
  description = "Bringing stories to life with technology and a touch of magic.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <header class="site-header">
      <div class="container">
        <a href="/" class="logo">The Lions Alliance</a>
        <nav class="nav">
          <a href="/">Home</a>
          <a href="/blog/">Blog</a>
          <a href="/resume/">Resume</a>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <p>Â© {new Date().getFullYear()} The Lions Alliance</p>
    </footer>
  </body>
</html>
