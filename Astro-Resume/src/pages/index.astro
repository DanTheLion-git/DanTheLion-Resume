<style>
  :root {
    /* Customize site-wide colors here */
    --bg: #0b0f17;
    --panel: rgba(255, 255, 255, 0.06);
    --panelHover: rgba(255, 255, 255, 0.10);
    --text: rgba(255, 255, 255, 0.92);
    --muted: rgba(255, 255, 255, 0.62);
    --outline: rgba(255, 255, 255, 0.14);

    --radius: 18px;
    --shadow: 0 10px 30px rgba(0, 0, 0, 0.35);

    --maxWidth: 1050px;
  }

  * { box-sizing: border-box; }
  html, body { height: 100%; }

  body {
    margin: 0;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    color: var(--text);
    background:
      radial-gradient(1200px 700px at 20% 0%, rgba(99, 102, 241, 0.25), transparent 55%),
      radial-gradient(900px 700px at 80% 20%, rgba(20, 184, 166, 0.22), transparent 60%),
      radial-gradient(900px 700px at 50% 100%, rgba(168, 85, 247, 0.18), transparent 55%),
      var(--bg);
  }

  .wrap {
    max-width: var(--maxWidth);
    margin: 0 auto;
    padding: 42px 18px 28px;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 26px;
  }

  h1 {
    font-size: clamp(28px, 4vw, 44px);
    line-height: 1.1;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .header p {
    margin: 0;
    color: var(--muted);
    font-size: 16px;
  }

  .grid {
    display: grid;
    gap: 14px;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }

  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 18px;

    padding: 18px 18px;
    border-radius: var(--radius);
    background: var(--panel);
    border: 1px solid var(--outline);
    box-shadow: var(--shadow);
    text-decoration: none;
    color: inherit;

    transition: transform 140ms ease, background 140ms ease, border-color 140ms ease;
    position: relative;
    overflow: hidden;
    min-height: 122px;
  }

  .card:hover {
    transform: translateY(-2px);
    background: var(--panelHover);
    border-color: rgba(255, 255, 255, 0.24);
  }

  .cardTop {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .icon {
    width: 46px;
    height: 46px;
    border-radius: 14px;
    display: grid;
    place-items: center;
    font-size: 22px;
    background: rgba(255, 255, 255, 0.10);
    border: 1px solid rgba(255, 255, 255, 0.14);
  }

  .name {
    font-weight: 650;
    font-size: 18px;
    letter-spacing: -0.01em;
  }

  .desc {
    color: var(--muted);
    font-size: 13px;
    margin-top: 2px;
  }

  .cta {
    font-weight: 600;
    font-size: 13px;
    color: rgba(255, 255, 255, 0.86);
    display: inline-flex;
    gap: 8px;
    align-items: center;
    opacity: 0.9;
  }

  .footer {
    margin-top: 22px;
    color: var(--muted);
  }

  /* Per-service accent ‚Äúglow‚Äù ‚Äî pick one of these in the services list via `color` */

  .card.teal::before,
  .card.purple::before,
  .card.blue::before,
  .card.red::before,
  .card.orange::before,
  .card.green::before {
    content: "";
    position: absolute;
    inset: -30% -30% auto -30%;
    height: 120%;
    filter: blur(30px);
    opacity: 0.35;
    pointer-events: none;
    transform: translateZ(0);
  }

  .card.teal::before   { background: radial-gradient(circle at 30% 30%, rgba(20, 184, 166, 0.9), transparent 60%); }
  .card.purple::before { background: radial-gradient(circle at 30% 30%, rgba(168, 85, 247, 0.9), transparent 60%); }
  .card.blue::before   { background: radial-gradient(circle at 30% 30%, rgba(59, 130, 246, 0.9), transparent 60%); }
  .card.red::before    { background: radial-gradient(circle at 30% 30%, rgba(239, 68, 68, 0.9), transparent 60%); }
  .card.orange::before { background: radial-gradient(circle at 30% 30%, rgba(249, 115, 22, 0.9), transparent 60%); }
  .card.green::before  { background: radial-gradient(circle at 30% 30%, rgba(34, 197, 94, 0.9), transparent 60%); }
</style>
