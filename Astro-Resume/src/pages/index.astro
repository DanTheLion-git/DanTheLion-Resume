  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body style="font-family: system-ui, sans-serif; padding: 2rem;">
  <h1>Test Homepage</h1>
  <p>This page includes the Netlify Identity widget.</p>

  <div
    data-netlify-identity-button
    style="display:inline-block;padding:0.5rem 1rem;border:1px solid #333;border-radius:4px;cursor:pointer;"
  >
    Login / Signup
  </div>

  <!-- Netlify Identity widget, inline so Astro doesn't re-bundle it -->
  <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

  <script is:inline>
    if (window.netlifyIdentity) {
      // Redirect to /admin after login
      window.netlifyIdentity.on("login", () => {
        document.location.href = "/admin/";
      });

      // Initialize widget (handles invite_token itself)
      window.netlifyIdentity.init();
    }
  </script>
</body>
</html>
