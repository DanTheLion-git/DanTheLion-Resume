<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>CMS</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body>
  <!-- Netlify Identity widget (inline so no CORS issues) -->
  <script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script is:inline>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.init();

      // If user is not logged in when opening /admin, open login modal
      window.netlifyIdentity.on("init", (user) => {
        if (!user) {
          window.netlifyIdentity.open();
        }
      });

      // After login, reload CMS (Decap will use the token)
      window.netlifyIdentity.on("login", () => {
        window.location.reload();
      });
    }
  </script>

  <!-- Decap CMS (Netlify CMS) -->
  <script is:inline src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
</body>
</html>
