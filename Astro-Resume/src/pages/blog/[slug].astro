---
import Layout from "../../layouts/Layout.astro";
import { getPosts, type WPPost } from "../../lib/wp";
import { decodeHTML } from "../../lib/html";

export async function getStaticPaths() {
  const posts = await getPosts(20);

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props as { post: WPPost };
---

<Layout title={`${decodeHTML(post.title.rendered)} | The Lions Alliance`}>
  <article>
    <h1 class="post-title-main">{decodeHTML(post.title.rendered)}</h1>

    <p class="post-meta">
      <time datetime={post.date}>
        {new Date(post.date).toLocaleDateString("en-GB", {
          year: "numeric",
          month: "short",
          day: "2-digit",
        })}
      </time>
    </p>

    <div class="post-content" set:html={post.content.rendered} />
  </article>
</Layout>
